<?php
// Database connection details
$servername = "localhost";  // The server name (localhost if using XAMPP)
$username = "root";         // The default MySQL username in XAMPP
$password = "";             // The default MySQL password is empty in XAMPP
$dbname = "student_db";      // Your database name (the one you created in phpMyAdmin)

// Create a connection to the database
$conn = new mysqli($servername, $username, $password, $dbname);

// Check if the connection was successful
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}
?>

